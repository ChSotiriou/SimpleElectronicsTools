<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronics Tools</title>
    <!-- Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- __COMMON_HEAD_START__ -->
<!-- __COMMON_HEAD_END__ -->
</head>

<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">A whole bunch of Simple Tools</h1>

        {% for tool_group, tool_items in tools.items() %}
                <h2 class="text-left mb-4">{{ tool_group }}</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tools</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for tool, info in tool_items.items() %}
                            <tr>
                                <td><a href="{{ info['link'] }}" class="btn btn-link">{{ tool }}</a></td>
                                <td>{{ info['desc'] }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
        {% endfor %}


    </div>

<!-- __COMMON_BODY_START__ -->
<!-- __COMMON_BODY_END__ -->

    <!-- Bootstrap JS and Popper.js (for responsive features) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>

</html>
